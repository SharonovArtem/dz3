using System;
using System.Collections.Generic;
using System.Linq;
using System.Text;
using System.Threading.Tasks;

namespace jun1
{
    internal class Program
    {
        static void Main(string[] args)
        {
            int picsInString = 3;
            int pics = 52;
            int fullStrings;
            int extraPics;

            fullStrings = pics / picsInString;
            extraPics = pics % picsInString;

            Console.WriteLine("у вас " + fullStrings + " заполненных рядов и " + extraPics + " лишних картинок.");
        }
    }
}
